@model CoffeeShop.Database.Data.CMS.GrindLevel

@{
    Layout = "_ItemLayout";
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h1>Szczegóły</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4" style="padding-right:50px">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden"  asp-for="IdGrindLevel" />
                <div class ="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
                    <div class="mdc-text-field">
                    <label asp-for="GrindName" class="mdc-floating-label"></label>
                    <input asp-for="GrindName" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="GrindName" class="text-danger"></span>
                </div>
                </div>
                <div class="mdc-text-field">
                    <label asp-for="Description" class="mdc-floating-label"></label>
                    <input asp-for="Description" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check" style="margin-top:30px">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" readonly /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded">Powrót do listy</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

