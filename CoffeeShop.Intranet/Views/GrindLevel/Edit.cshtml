@model CoffeeShop.Database.Data.CMS.GrindLevel

@{
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Poziom zmielenia</h4>
<hr />
    <div class="row">
        <div class="col-md-4" style="padding:20px">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdGrindLevel" />
                <div class="mdc-text-field">
                    <label asp-for="GrindName" class="mdc-floating-label"></label>
                    <input asp-for="GrindName" class="mdc-text-field__input" id="text-field-hero-input"  />
                    <span asp-validation-for="GrindName" class="text-danger"></span>
                </div>
                <div class="mdc-text-field">
                    <label asp-for="Description" class="mdc-floating-label"></label>
                    <input asp-for="Description" class="mdc-text-field__input" id="text-field-hero-input"  />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check" style="margin-top:30px">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive"  /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
            </div>
            <div class="form-group">
                    <input type="submit" value="Zapisz" class="mdc-button mdc-button--raised filled-button--light" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
