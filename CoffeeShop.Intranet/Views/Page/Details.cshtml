@model CoffeeShop.Database.Data.CMS.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}


    <div class="row" style="padding: 20px;">
    <h4>Szczegóły</h4>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mdc-text-field">
                    <label asp-for="LinkTitle" class="mdc-floating-label"></label>
                <input asp-for="LinkTitle" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="LinkTitle" class="text-danger"></span>
                </div>
                <div class="mdc-text-field">
                    <label asp-for="PageTitle" class="mdc-floating-label"></label>
                <input asp-for="PageTitle" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="PageTitle" class="text-danger"></span>
                </div>
                <div class="mdc-text-field">
                    <label asp-for="Content" class="mdc-floating-label"></label>
                <input asp-for="Content" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="mdc-text-field">
                    <label asp-for="Position" class="mdc-floating-label"></label>
                <input asp-for="Position" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>               
            </form>
        </div>
        <div style="margin-top: 30px;">
        <a asp-action="Index" class="mdc-button mdc-button--raised filled-button--light">Powrót do listy</a>
    </div>
    </div>
