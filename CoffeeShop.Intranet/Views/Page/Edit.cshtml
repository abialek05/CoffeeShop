@model CoffeeShop.Database.Data.CMS.Page

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}

<h1>Edit</h1>

<h4>Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPage" />
            <div class="mdc-text-field">
                <label asp-for="LinkTitle" class="mdc-floating-label"></label>
                <input asp-for="LinkTitle" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="LinkTitle" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="PageTitle" class="mdc-floating-label"></label>
                <input asp-for="PageTitle" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="Content" class="mdc-floating-label"></label>
                <input asp-for="Content" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="Position" class="mdc-floating-label"></label>
                <input asp-for="Position" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="mdc-button mdc-button--raised filled-button--light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
