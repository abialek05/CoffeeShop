@model IEnumerable<CoffeeShop.Database.Data.CMS.Page>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}

<div style="padding: 20px;">
    <h1 style="margin-bottom: 30px;">Lista stron</h1>
    <a asp-action="Create" class="mdc-button mdc-button--raised filled-button--light">Dodaj nową stronę</a>
</div>
<table class="table" style="padding: 20px;">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.LinkTitle)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.PageTitle)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.LinkTitle)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.PageTitle)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td style="text-align:center">
                <a asp-action="Edit" asp-route-id="@item.IdPage">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdPage">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPage">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
