@model CoffeeShop.Database.Data.CMS.Product

@{
    ViewData["Title"] = "Dodaj produkt";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}

<h1>Dodaj produkt</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mdc-text-field">
                <label asp-for="ProductName" class="mdc-floating-label"></label>
                <input asp-for="ProductName" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="ProductTypeId" class="mdc-floating-label"></label>
                <select asp-for="ProductTypeId" class="mdc-text-field__input" id="text-field-hero-input" asp-items="ViewBag.ProductType"></select>
            </div>
            <div class="mdc-text-field">
                <label asp-for="CountryOrigin" class="mdc-floating-label"></label>
                <input asp-for="CountryOrigin" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="CountryOrigin" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="Description" class="mdc-floating-label"></label>
                <input asp-for="Description" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="DescriptionLong" class="mdc-floating-label"></label>
                <input asp-for="DescriptionLong" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="DescriptionLong" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="FlavorNotes" class="mdc-floating-label"></label>
                <input asp-for="FlavorNotes" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="FlavorNotes" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="Weight" class="mdc-floating-label"></label>
                <input asp-for="Weight" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="Price" class="mdc-floating-label"></label>
                <input asp-for="Price" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mdc-text-field">
                <label asp-for="PhotoURL" class="mdc-floating-label"></label>
                <input asp-for="PhotoURL" class="mdc-text-field__input" id="text-field-hero-input" />
                <span asp-validation-for="PhotoURL" class="text-danger"></span>
            </div>
            <div class="mdc-text-field" style="height:auto;">
                <label asp-for="GrindLevelId" class="mdc-floating-label"></label>
                <select asp-for="GrindLevelId" class="mdc-text-field__input" asp-items="ViewBag.GrindLevel"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group" style="margin-top:30px">
                <input type="submit" value="Dodaj" class="mdc-button mdc-button--raised filled-button--light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
