@model CoffeeShop.Database.Data.CMS.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}

<h4>Szczegóły</h4>
<div class="row" style="padding: 20px;">
    <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdProduct" />
                        <div class="mdc-text-field">
                            <label asp-for="ProductName" class="mdc-floating-label"></label>
                            <div class="mdc-line-ripple"></div>
                            <input asp-for="ProductName" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field" style="height: auto;">
                            <label asp-for="ProductTypeId" class="mdc-floating-label"></label>
                            <select asp-for="ProductTypeId" class="mdc-text-field__input" id="text-field-hero-input" asp-items="ViewBag.ProductTypeId" readonly></select>
                            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="CountryOrigin" class="mdc-floating-label"></label>
                            <input asp-for="CountryOrigin" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="CountryOrigin" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="Description" class="mdc-floating-label"></label>
                            <input asp-for="Description" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="DescriptionLong" class="mdc-floating-label"></label>
                            <input asp-for="DescriptionLong" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="DescriptionLong" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="FlavorNotes" class="mdc-floating-label"></label>
                            <input asp-for="FlavorNotes" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="FlavorNotes" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="Weight" class="mdc-floating-label"></label>
                            <input asp-for="Weight" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="Price" class="mdc-floating-label"></label>
                            <input asp-for="Price" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field">
                            <label asp-for="PhotoURL" class="mdc-floating-label"></label>
                            <input asp-for="PhotoURL" class="mdc-text-field__input" id="text-field-hero-input" readonly />
                            <span asp-validation-for="PhotoURL" class="text-danger"></span>
                        </div>
                        <div class="mdc-text-field" style="height:auto;">
                            <label asp-for="GrindLevelId" class="mdc-floating-label"></label>
                <select asp-for="GrindLevelId" class="mdc-text-field__input" id="text-field-hero-input" asp-items="ViewBag.GrindLevelId" readonly></select>
                            <span asp-validation-for="GrindLevelId" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check" style="margin-top: 10px;">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" readonly /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
   </div>

<a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded">Powrót do listy</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
