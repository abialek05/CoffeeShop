@model CoffeeShop.Database.Data.CMS.Training

@{
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Training</h4>
<hr />
<div class="table">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mdc-text-field">
                    <input asp-for="TrainingName" class="mdc-text-field__input" id="text-field-hero-input" />
                    <div class="mdc-line-ripple"></div>
                    <label asp-for="TrainingName" class="mdc-floating-label"></label>
                    <span asp-validation-for="TrainingName" class="text-danger"></span>
                </div>
                <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-3-desktop" style="margin-top:10px">
                    <label asp-for="StartDate" class="control-label" style="padding: 10px"></label>
                    <input asp-for="StartDate" id="datepicker" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-3-desktop" style="margin-top:10px">
                    <label asp-for="EndDate" class="control-label" style="padding: 10px; vertical-align: central"></label>
                    <input asp-for="EndDate" class="mdi-box" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                    <div class="mdc-text-field">
                        <input asp-for="Price" class="mdc-text-field__input" id="text-field-hero-input" />
                        <div class="mdc-line-ripple"></div>
                        <label asp-for="Price" class="mdc-floating-label"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                    <div class="mdc-text-field" style="margin-top:20px">
                        <input asp-for="Spots" class="mdc-text-field__input" id="text-field-hero-input" />
                        <div class="mdc-line-ripple"></div>
                        <label asp-for="Spots" class="mdc-floating-label"></label>
                        <span asp-validation-for="Spots" class="text-danger"></span>
                    </div>
                </div>
                <div class="mdc-form-field">
                    <div class="mdc-checkbox">
                        <input type="checkbox"
                               id="basic-disabled-checkbox"
                               class="mdc-checkbox__native-control"
                               checked asp-for="IsActive" />
                        <div class="mdc-checkbox__background">
                            <svg class="mdc-checkbox__checkmark"
                                 viewBox="0 0 24 24">
                                <path class="mdc-checkbox__checkmark-path"
                                      fill="none"
                                      d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                            </svg>
                            <div class="mdc-checkbox__mixedmark"></div>
                        </div>
                    </div>
                    <label for="basic-disabled-checkbox" id="basic-disabled-checkbox-label">@Html.DisplayNameFor(model => model.IsActive)</label>
                </div>
            <div class="form-group">
                    <input type="submit" value="Zapisz" class="mdc-button mdc-button--raised filled-button--light" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="mdc-button mdc-button--outlined outlined-button--dark mdc-ripple-upgraded">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
