@model IEnumerable<CoffeeShop.Database.Data.CMS.Training>

@{
    Layout = "_ItemLayout";
}

<!DOCTYPE html>
<style>
    th{
        text-align: left;
    }
    td{
        text-align: left;
    }
</style>
<html>

<body>
    <p>
        <div style="padding: 20px;">
<h1 style="margin-bottom: 30px;">Lista szkoleń</h1>
            <a asp-action="Create" class="mdc-button mdc-button--raised filled-button--light">Dodaj nowe szkolenie</a>
        </div>
</p>
<table class="table" style="padding: 20px;">
    <thead>
            <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTraining">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdTraining">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTraining">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
