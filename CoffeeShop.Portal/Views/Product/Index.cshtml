@{
}
@model IEnumerable<CoffeeShop.Database.Data.CMS.Training>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col s12 m4">
            <div class="icon-block">
                <h2 class="center light-blue-text"><i class="material-icons">flash_on</i></h2>
                <h5 class="center">
                    @Html.ActionLink(item.TrainingName, "Product","Index", new{id=item.IdTraining}, null)
                </h5>
                <p class="light">@item.TrainingName</p>
            </div>
        </div>
    }
</div>