@model IEnumerable<CoffeeShop.Database.Data.CMS.Training>
<section class="ftco-menu mb-5 pb-5">
    <div class="container">
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-0-tab" data-toggle="pill" href="#v-pills-0" role="tab" aria-controls="v-pills-0" aria-selected="true">Szkolenia</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
                                <div class="row">

                                        @foreach (var item in Model)
                                    {
                                        <div class="col-md-3">
                                            <div class="menu-entry">
                                                <div class="text text-center pt-4">
                                                    <h3>
                                                        @Html.ActionLink(item.TrainingName, "Index","Home", new{id=item.IdTraining}, null)
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        }

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>